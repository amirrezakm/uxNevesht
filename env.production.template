# UX Nevesht Production Environment Configuration
# Copy this file to .env and update the values

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
NODE_ENV=production
APP_NAME=ux-nevesht
APP_VERSION=1.0.0

# ==============================================
# SERVER CONFIGURATION
# ==============================================
# API Server
API_PORT=3001
API_HOST=0.0.0.0
API_URL=http://localhost:3001

# Web Server
WEB_PORT=3000
WEB_HOST=0.0.0.0
NEXT_PUBLIC_API_URL=http://uxw.payanekhosh.ir/api

# Domain Configuration
DOMAIN=uxw.payanekhosh.ir
NEXT_PUBLIC_DOMAIN=uxw.payanekhosh.ir

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# Supabase Configuration
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Database URL (if using direct PostgreSQL connection)
DATABASE_URL=postgresql://username:password@localhost:5432/ux_nevesht

# ==============================================
# REDIS CONFIGURATION (Optional)
# ==============================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_here_minimum_32_characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Encryption Keys
ENCRYPTION_KEY=your_32_character_encryption_key_here
HASH_SALT_ROUNDS=12

# CORS Configuration
CORS_ORIGIN=http://uxw.payanekhosh.ir,https://uxw.payanekhosh.ir
CORS_CREDENTIALS=true

# ==============================================
# AI/ML CONFIGURATION
# ==============================================
# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Alternative AI Providers (if using)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
COHERE_API_KEY=your_cohere_api_key_here

# Embedding Configuration
EMBEDDING_MODEL=text-embedding-ada-002
EMBEDDING_DIMENSIONS=1536

# ==============================================
# FILE UPLOAD CONFIGURATION
# ==============================================
# File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,md
UPLOAD_DIR=/var/www/ux-nevesht/uploads
TEMP_DIR=/var/www/ux-nevesht/temp

# Cloud Storage (if using)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=ux-nevesht-uploads

# ==============================================
# LOGGING CONFIGURATION
# ==============================================
# Log Levels: error, warn, info, debug
LOG_LEVEL=info
LOG_DIR=/var/www/ux-nevesht/logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Enable/Disable specific logs
LOG_API_REQUESTS=true
LOG_DATABASE_QUERIES=false
LOG_AI_INTERACTIONS=true

# ==============================================
# RATE LIMITING CONFIGURATION
# ==============================================
# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Upload Rate Limiting
UPLOAD_RATE_LIMIT_WINDOW_MS=3600000
UPLOAD_RATE_LIMIT_MAX_REQUESTS=10

# ==============================================
# CACHE CONFIGURATION
# ==============================================
# Cache Settings
CACHE_TTL=3600
CACHE_MAX_ITEMS=1000
ENABLE_MEMORY_CACHE=true
ENABLE_REDIS_CACHE=true

# ==============================================
# MONITORING & ANALYTICS
# ==============================================
# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=0.1

# Error Tracking (Sentry, etc.)
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=production

# Analytics
GOOGLE_ANALYTICS_ID=your_ga_id_here

# ==============================================
# EMAIL CONFIGURATION (Optional)
# ==============================================
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password_or_app_password

# Email Settings
FROM_EMAIL=noreply@uxw.payanekhosh.ir
FROM_NAME=UX Nevesht

# ==============================================
# WEBHOOK CONFIGURATION (Optional)
# ==============================================
# Webhook URLs for notifications
WEBHOOK_URL_SUCCESS=
WEBHOOK_URL_ERROR=
WEBHOOK_SECRET=your_webhook_secret

# ==============================================
# FEATURE FLAGS
# ==============================================
# Enable/Disable Features
ENABLE_WEBSOCKETS=true
ENABLE_FILE_UPLOAD=true
ENABLE_AI_CHAT=true
ENABLE_DOCUMENT_PROCESSING=true
ENABLE_USER_AUTHENTICATION=false
ENABLE_RATE_LIMITING=true
ENABLE_COMPRESSION=true

# ==============================================
# DEVELOPMENT/DEBUG (Set to false in production)
# ==============================================
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_CORS_ALL=false
DISABLE_AUTH=false

# ==============================================
# BACKUP CONFIGURATION (Optional)
# ==============================================
# Database Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/var/backups/ux-nevesht

# ==============================================
# SSL/TLS CONFIGURATION
# ==============================================
# SSL Settings (for HTTPS)
SSL_CERT_PATH=/etc/letsencrypt/live/uxw.payanekhosh.ir/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/uxw.payanekhosh.ir/privkey.pem
FORCE_HTTPS=true

# ==============================================
# LOCALIZATION
# ==============================================
# Language Settings
DEFAULT_LANGUAGE=fa
SUPPORTED_LANGUAGES=fa,en
TIMEZONE=Asia/Tehran
